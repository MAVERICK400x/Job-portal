<!DOCTYPE html>
<html lang="en">
<head>
    <title>My Applications</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-5">
    <h2>My Applied Jobs</h2>
    <% if (appliedJobs && appliedJobs.length > 0) { %>
        <ul class="list-group mt-3">
            <% appliedJobs.forEach(job => { %>
                <li class="list-group-item">
                    <strong><%= job.title %></strong> at <span class="text-muted"><%= job.company %></span>
                    <br>
                    <small class="text-muted">Location: <%= job.location %></small> |
                    <small class="text-muted">Salary: <%= job.salary %></small>
                    <br>
                    <small class="text-muted">Requirements: <%= job.requirements.join(", ") %></small>
                    <br>
                    <span class="badge bg-info text-dark">Apply By: <%= job.applyBy %></span>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p class="text-muted mt-3">You haven't applied for any jobs yet.</p>
    <% } %>
    <div class="mt-4">
        <a href="/" class="btn btn-danger">Back</a>
        <a href="/jobs" class="btn btn-primary">Back to Jobs</a>
        <a href="/logout" class="btn btn-danger">Logout</a>
    </div>
</body>
</html>